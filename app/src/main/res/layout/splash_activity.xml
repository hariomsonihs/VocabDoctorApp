<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:orientation="vertical">

    <!-- App Logo & Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="Vocab Logo"/>

        <TextView
            android:id="@+id/splash_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOCAB DOCTOR"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:letterSpacing="0.1"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/splash_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dictionary &amp; Grammar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:alpha="0.8"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Progress Bar (Ancient Style) -->
    <ProgressBar
        android:id="@+id/splash_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="8dp"
        android:layout_above="@id/splash_footer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:indeterminate="true"
        android:progressDrawable="@drawable/progress_bar"/>

    <!-- Footer Text -->
    <TextView
        android:id="@+id/splash_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Loading Dictionary..."
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:alpha="0.7"/>
</RelativeLayout>